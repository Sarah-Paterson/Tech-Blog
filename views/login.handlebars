
<!-- title -->
<div class="container has-text-centered mt-4 mb-6">
    <p class="title">
        Log in
    </p>
</div>

<!-- input -->
<div class="box mx-6">
  <div class="field">
    <p class="control">
      <label class="label">Email</label>
      <input class="input" type="email" placeholder="Email" id="login-email">
    </p>
  </div>
  <div class="field">
    <p class="control">
      <label class="label">Password</label>
      <input class="input" type="password" placeholder="Password" id="login-password">
    </p>
  </div>
  <div class="field">
    <p class="control">
      <button class="button is-primary" id="login-btn">
        Log in
      </button>
      <button class="button is-primary is-light signup-btn">
        Sign up
      </button>
    </p>
  </div>
</div>

<script src="/js/login.js"></script>